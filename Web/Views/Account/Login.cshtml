@model Web.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/shared/_LayoutPage.cshtml";
}

<div class="account_grid">
    <div class="login-right">
        <h3>Đăng nhập</h3>
        <p>Nếu bạn đã có một tài khoản với chúng tôi, vui long đăng nhập.</p>
        @using (Html.BeginForm("Login", "Account", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div>
                <span>Tài khoản<label>*</label></span>
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder="Tài khoản của bạn" })
                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
            </div>
            <div>
                <span>Mật khẩu<label>*</label></span>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Mật khẩu" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            <div>
                <span></span>
                @Html.CheckBoxFor(model => model.RememberMe)
                Nhớ mật khẩu?
            </div>
            <a class="forgot" href="#">Quên mật khẩu của bạn?</a>
            <input type="submit" value="Login">
        }

                @Html.Partial("_ExternalLoginsListPartial", new Web.Models.ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
            
    </div>
    <div class="login-left">
        <h3>Chưa có tài khoản</h3>
        <p>Nếu bạn chưa có tài khoản vui lòng đăng ký vói link dưới đây.</p>
        <a class="acount-btn" href="/dang-ky.html">Create an Account</a>
    </div>
    <div class="clearfix"> </div>
</div>
